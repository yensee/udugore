<Context>
	<Resource name="jdbc/ds_live" 
		auth="Container"
		type="javax.sql.DataSource"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
		testWhileIdle="true" 
		testOnBorrow="true" 
		testOnReturn="false"
		validationQuery="SELECT 1" 
		validationInterval="30000"
		timeBetweenEvictionRunsMillis="5000" 
		maxActive="200" 
		maxIdle="10"
		minIdle="5" 
		maxWait="10000" 
		initialSize="10" 
		jmxEnabled="true"
		jdbcInterceptors="org.apache.tomcat.jdbc.pool.interceptor.ConnectionState;
            org.apache.tomcat.jdbc.pool.interceptor.StatementFinalizer"
		username="${DB_U}" password="${DB_P}"
		driverClassName="com.mysql.cj.jdbc.Driver"
		url="jdbc:mysql://${DB_URL}?autoReconnect=true&amp;useSSL=false" 
		closeMethod="close" />
	<Resource name="jdbc/ds_rpt" 
		auth="Container"
		type="javax.sql.DataSource"
		factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
		testWhileIdle="true" 
		testOnBorrow="true" 
		testOnReturn="false"
		validationQuery="SELECT 1" 
		validationInterval="30000"
		timeBetweenEvictionRunsMillis="-1" 
		maxActive="200" maxIdle="10"
		minIdle="5" 
		maxWait="10000" 
		initialSize="10" 
		jmxEnabled="true"
		jdbcInterceptors="org.apache.tomcat.jdbc.pool.interceptor.ConnectionState;
            org.apache.tomcat.jdbc.pool.interceptor.StatementFinalizer"
		username="${DB_U_R}" 
		password="${DB_P_R}"
		driverClassName="com.mysql.cj.jdbc.Driver"
		url="jdbc:mysql://${DB_URL_R}?autoReconnect=true&amp;useSSL=false" 
		closeMethod="close" />
</Context>
